# HTTPS is expected to be handled by Cloudflare or some other reverse proxy.
{
  auto_https off
}

:8080 {
  root * {$SITE_ROOT}
  encode gzip # TODO: check options
  file_server
  log

  redir /rss.xml /posts/rss.xml 307
  reverse_proxy /js/script.js https://stats.ovy.sh
  reverse_proxy /api/event https://stats.ovy.sh

  handle_errors {
    @404 {
      expression {http.error.status_code} == 404
    }

    rewrite @404 /404.html
    file_server
  }
}
