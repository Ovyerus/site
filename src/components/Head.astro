---
import { SEO } from "astro-seo";

interface Props {
  description?: string;
  title: string;
  ogTitle: string;
  ogImage?: string;
}

const { description, title, ogTitle, ogImage } = Astro.props;
const image = new URL(ogImage || "/ogimage.png", Astro.site).href;

const IS_PRODUCTION = import.meta.env.MODE === "production";
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link
    rel="alternate"
    type="application/rss+xml"
    title="Ovyerus' posts"
    href={`${import.meta.env.SITE}/posts/rss.xml`}
  />
  <link
    rel="alternate"
    type="application/rss+xml"
    title="Ovyerus' weeknotes"
    href={`${import.meta.env.SITE}/weeknotes/rss.xml`}
  />
  {
    IS_PRODUCTION && (
      <script
        defer
        data-domain="ovyerus.com"
        data-api="/api/event"
        src="/js/script.js"
      />
    )
  }
  <SEO
    title={title}
    description={description}
    openGraph={{
      basic: {
        title: ogTitle,
        type: "website",
        image,
      },
      optional: {
        siteName: "Ovyerus",
        description,
      },
      image: {
        alt: "",
        type: "image/png",
        height: ogImage ? 315 : 250,
        width: ogImage ? 600 : 500,
      },
    }}
    twitter={{
      card: "summary_large_image",
      creator: "@ovyerus",
    }}
  />
  <slot />
</head>
