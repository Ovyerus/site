---
import "@fontsource/montserrat/400.css";
import "@fontsource/montserrat/700.css";
import { SEO } from "astro-seo";

export interface Props {
  description: string;
  title: string;
  ogTitle: string;
}

const { description, title, ogTitle } = Astro.props;
const image = new URL(Astro.site!);
image.pathname = "/ogimage.png";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title: ogTitle,
          type: "website",
          image: image.toString(),
        },
        optional: {
          siteName: "Ovyerus",
          description,
        },
        image: {
          alt: "A magenta to cyan gradient.",
        },
      }}
      twitter={{
        card: "summary",
        creator: "@ovyerus",
      }}
    />
  </head>
  <body
    class="bg-black text-white text-xl md:text-2xl italic w-screen flex-grow"
  >
    <slot />
    <style>
      html {
        min-height: 100%;
        display: flex;
        flex-direction: column;
      }
    </style>
  </body>
</html>
