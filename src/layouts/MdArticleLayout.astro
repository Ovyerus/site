---
// `./ArticleLayout.astro` but takes the props for a direct .md page.

import type { CommentsProp } from "~lib/types";
import ArticleLayout from "./ArticleLayout.astro";

interface Props {
  frontmatter: {
    title: string;
    createdAt?: Date;
    modifiedAt?: Date;
    description?: string;
    navCurrent?: string;
    comments?: CommentsProp;
    premable?: string;
    tags?: string[];
    ogImage?: string;
  };
}

const { frontmatter } = Astro.props;
---

<ArticleLayout {...frontmatter}>
  <slot />
</ArticleLayout>
